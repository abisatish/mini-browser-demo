# Railway Deployment Configuration

# Performance Settings for Railway (512MB - 8GB RAM)
MAX_USERS=10              # Support 10 concurrent users
TARGET_FPS=8              # 8 FPS for smooth but efficient updates
WORKER_THREADS=3          # 3 browser workers for isolation
BROWSERS_PER_WORKER=3     # 3 browsers per worker (9 total capacity)

# Resource Limits
SESSION_TIMEOUT=1800000   # 30 minutes session timeout
REQUEST_QUEUE_SIZE=100    # Max queued requests
SCREENSHOT_QUALITY=70     # Balance quality vs performance

# Memory Management
NODE_OPTIONS="--max-old-space-size=4096"  # 4GB heap for Node.js

# Logging
LOG_LEVEL=info

# Cookie persistence (optional)
COOKIE_FILE=/tmp/cookies.json