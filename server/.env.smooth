# Optimized for 2-3 Users - SILKY SMOOTH Performance

# Core Settings
MAX_USERS=3                    # Support 3 concurrent users max
TARGET_FPS=20                  # 20 FPS for smooth experience
SCREENSHOT_QUALITY=85          # High quality screenshots

# Worker Configuration
BROWSER_WORKERS=2              # 2 workers for redundancy
BROWSERS_PER_WORKER=2          # 2 browsers per worker (4 total)

# Performance Optimizations
SCREENSHOT_COMPRESSION=false   # Skip compression for lower latency
PRIORITY_MODE=true            # Process user actions immediately
REQUEST_QUEUE_SIZE=50         # Smaller queue for faster processing

# Resource Settings
SESSION_TIMEOUT=1800000       # 30 minutes
WORKER_RESTART_DELAY=2000     # 2 seconds
NODE_OPTIONS="--max-old-space-size=2048"  # 2GB heap

# Logging
LOG_LEVEL=warn               # Less logging for performance

# Optional AI Features
# OPENAI_API_KEY=your_key_here
# ANTHROPIC_API_KEY=your_key_here