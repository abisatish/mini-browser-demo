{
  "manifest_version": 3,
  "name": "Mini Browser Viewer",
  "version": "1.0",
  "description": "Remote browser control",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "ws://*/*",
    "wss://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}